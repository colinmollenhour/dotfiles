# Colin's .gitconfig ($INSTALL_REPO_HEAD)
# Installed on $INSTALL_DATE
# https://github.com/colinmollenhour/dotfiles
[user]
	name = Colin Mollenhour
	email = colin@mollenhour.com

[github]
	name = colinmollenhour

[alias]
	# Shortcuts
	s = status
	co = checkout
	br = branch
	cp = cherry-pick

	# Advanced Shortcuts
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
	staged = diff --cached
	unstage = reset HEAD
	head = log -n1
	upstream-branch-name = "!git rev-parse --abbrev-ref --symbolic-full-name @{u}"
	preview-pull = "!git fetch && git diff ...`git upstream-branch-name`"
	du = "!git diff `git upstream-branch-name`..."
	files = "!f() { if [ -z \"$1\" ]; then echo 'Usage: git files <commit>'; exit 1; fi; git diff --name-status \"$1^\" \"$1\"; }; f"
	backport-commit = "!f() { set -ex; head=$(git rev-parse --abbrev-ref HEAD); stashed=0; git diff --quiet || { stashed=1; git stash push -a -m 'Backporting in progress'; }; git checkout \"$1\"; git pull --ff-only; git cherry-pick $head; git push -o ci.skip; git checkout $head; if [ $stashed -eq 1 ]; then git stash pop; fi; echo \"Backport successful.\"; }; f"
[color]
	ui = auto

[merge]
	tool = diffmerge
[mergetool "diffmerge"]
	cmd = diffmerge.sh \"$PWD/$LOCAL\" \"$PWD/$BASE\" \"$PWD/$REMOTE\" \"$PWD/$MERGED\"
	trustExitCode = false
	keepBackup = false
[push]
	default = tracking
[core]
	excludesfile = ~/.gitignore.global
#        attributesFile = ~/.gitattributes.global
[diff]
	tool = meld
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[http]
	cookiefile = ~/.gitcookies
[interactive]
	diffFilter = diff-so-fancy --patch
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	func = 146 bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
